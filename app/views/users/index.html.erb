<h1>Listing Users</h1>

<%= link_to 'New user', new_user_path %>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>Gender</th>
      <th>Date of Birth</th>
      <th>Email</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.gender %></td>
        <td><%= user.date_of_birth %></td>
        <td><%= user.email %></td>
        <td><%= user.bio %></td>
        <td><%= link_to 'Profile', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Kill this guy?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


